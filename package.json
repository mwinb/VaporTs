{
  "name": "vaports",
  "version": "0.0.0",
  "description": "An experimental extension of DocTs that aims to create an event driven express and typescript based framework that allows for loosely coupled and easy to test servers.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "lint": "eslint \"./src/**/*.ts\"",
    "test:loop": "jest --watchAll",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest --watchAll=false --silent --coverage --bail --passWithNoTests",
    "build": "tsc",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src"
  },
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mwinb/vaporjs.git"
  },
  "keywords": [
    "express",
    "typescript",
    "doc-ts",
    "events",
    "vaporjs"
  ],
  "author": "Michael Winberry",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mwinb/vaporjs/issues"
  },
  "homepage": "https://github.com/mwinb/vaporjs#readme",
  "dependencies": {
    "@mwinberry/doc-ts": "^1.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.23",
    "@types/node": "15.6.1",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "8.3.0",
    "jest": "27.0.3",
    "prettier": "^2.2.1",
    "ts-jest": "27.0.2",
    "typescript": "^4.2.4"
  }
}
