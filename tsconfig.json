{
  "version": "2.0.2",
  "compilerOptions": {
    "outDir": "./lib",
    "lib": ["es5", "es6"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/**/*test*", "./src/__mocks__/**/*", "./example/**/*"]
}
